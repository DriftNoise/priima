set -e

VENV="venv"
if [ ! -d "$VENV" ]
then
    PYTHON=$(command -v python3)
    $PYTHON -m venv venv
fi

# shellcheck source=/dev/null  # don't check venv activate script
source venv/bin/activate
pip install -U pip wheel
pip install -r base_requirements.txt

# header paths must be specified so that GDAL builds inside the virtualenv
CFLAGS=$(gdal-config --cflags) pip install "GDAL<=$(gdal-config --version)"

pip install -r requirements.txt

# handle Cartopy installation on different GEOS versions
# Cartopy only supports GEOS 3.7.1 up to and including 0.19.0.post1
GEOS_VERSION="$(geos-config --version)"
CARTOPY_20_GEOS_VERSION="3.7.2"
COMPATIBLE_CARTOPY_20_GEOS_VERSION=$(echo -e "$GEOS_VERSION\\n$CARTOPY_20_GEOS_VERSION" | sort -V | tail -n 1)
if [ "$GEOS_VERSION" == "$COMPATIBLE_CARTOPY_20_GEOS_VERSION" ]
then
    pip install Cartopy==0.21.0
else
    pip install Cartopy==0.19.0.post1
fi
